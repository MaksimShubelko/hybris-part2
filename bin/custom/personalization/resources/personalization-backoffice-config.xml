<config xmlns="http://www.hybris.com/cockpit/config"
        xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
        xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
        xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch"
        xmlns:explorerTree="http://www.hybris.com/cockpitng/config/explorertree"
        xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config">

    <!-- personalization UI configuration should be provided here -->

    <!--<context component="component-code" module="personalization">-->
    <!--Please check documentation for code snippets for specific components-->
    <!--</context>-->

    <context component="explorer-tree" merge-by="type" parent="auto">
        <explorerTree:explorer-tree>
            <explorerTree:navigation-node id="Questions Addon" position="1">
                <explorerTree:type-node id="Questions" code="Question"/>
            </explorerTree:navigation-node>
        </explorerTree:explorer-tree>
    </context>

    <context type="Question" component="listview" merge-by="type">
        <list-view:list-view>
            <list-view:column label="Product" qualifier="product"/>
            <list-view:column label="Author" qualifier="questionCustomer"/>
            <list-view:column label="Answer Author" qualifier="answerCustomer"/>
        </list-view:list-view>
    </context>

    <context type="Question" component="advanced-search" merge-by="type" parent="auto">
        <advanced-search:advanced-search>
            <advanced-search:field-list>
                <advanced-search:field name="product" selected="true"/>
                <advanced-search:field name="questionCustomer" selected="true"/>
            </advanced-search:field-list>
        </advanced-search:advanced-search>
    </context>

    <context type="Question" component="create-wizard">
        <wz:flow id="question" title="Create a New Question">
            <wz:prepare id="questionPrepare">
                <wz:initialize property="newQuestion" type="ctx.TYPE_CODE"/>
            </wz:prepare>
            <wz:step id="step1" sublabel="Create a New Question">
                <wz:content>
                    <wz:property-list root="newQuestion">
                        <wz:property qualifier="code" label="Code" validate="true"/>
                        <wz:property qualifier="question" label="Question" validate="true"/>
                        <wz:property qualifier="questionCustomer" label="Question Customer" validate="true"/>
                        <wz:property qualifier="answer" label="Answer"/>
                        <wz:property qualifier="answerCustomer" label="Answer Customer"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done>
                        <wz:save property="newQuestion"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>


    <context type="Question" component="editor-area" merge-by="type">
        <editorArea:editorArea>
            <editorArea:essentials>
                <editorArea:essentialSection name="Essential">
                    <editorArea:attribute qualifier="product" label="Product"/>
                    <editorArea:attribute qualifier="questionCustomer" label="Question Customer"/>
                </editorArea:essentialSection>
            </editorArea:essentials>
            <editorArea:tab name="Administration"/>
            <editorArea:tab name="QA">
                <editorArea:section name="QA">
                    <editorArea:attribute qualifier="question" label="Question"/>
                    <editorArea:attribute qualifier="answer" label="Answer"/>
                    <editorArea:attribute qualifier="approved" label="Approved"/>
                </editorArea:section>
            </editorArea:tab>
        </editorArea:editorArea>
    </context>

</config>

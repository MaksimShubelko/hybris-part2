--><project name="personalization_buildcallbacks">
    	
    <property name="personalizationWebFragmentSrc" value="${ext.personalization.path}/resources/web-fragment.xml"/>
    	
    <property name="personalizationWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_personalization.jar"/>
    	

	

	
    <macrodef name="personalization_after_clean">
        		
        <sequential>
            			
            <personalization_remove_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="personalization_after_build">
        		
        <sequential>
            			
            <personalization_remove_web_fragment/>
            			
            <personalization_create_web_fragment/>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="personalization_remove_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${personalizationWebFragmentDestJar}"/>
                				
                <then>
                    					
                    <delete file="${personalizationWebFragmentDestJar}"/>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <macrodef name="personalization_create_web_fragment">
        		
        <sequential>
            			
            <if>
                				
                <available file="${personalizationWebFragmentSrc}"/>
                				
                <then>
                    					
                    <sequential>
                        						
                        <jar destfile="${personalizationWebFragmentDestJar}">
                            							
                            <metainf file="${personalizationWebFragmentSrc}"/>
                            						
                        </jar>
                        					
                    </sequential>
                    				
                </then>
                			
            </if>
            		
        </sequential>
        	
    </macrodef>
    	
    <patternset id="personalization.localization.pattern">
        		
        <!-- core and hmc  -->
        		
        <include name="**/*locales*_en.properties"/>
        		
        <exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
        		
        <exclude name="**/unittest/**/*"/>
        		
        <!-- cockpit (ng) -->
        		
        <include name="**/i3-label_en.properties"/>
        		
        <include name="**/labels_en.properties"/>
        		
        <!-- messages -->
        		
        <include name="**/*messages_en.properties"/>
        		
        <include name="**/*messages.properties"/>
        		
        <!-- frontend properties files in WEB-INF/messages folder -->
        		
        <include name="**/WEB-INF/messages/*_en.properties"/>
        		
        <!-- csv and impex -->
        		
        <include name="**/*_en.csv"/>
        		
        <include name="**/*_en.impex"/>
        		
        <include name="**/lang-en.properties"/>
        		
        <!-- email localizations from yacceleratorcore -->
        		
        <include name="resources/**/messages/*_en.properties"/>
        		
        <!-- include validation messages -->
        		
        <include name="resources/**/ValidationMessages.properties"/>
        	
    </patternset>
    	
    <macrodef name="personalization_before_build">
		<sequential>
			<register_sass_extension extensionname="personalization"/>
			<register_sass_extension extensionname="personalization" resources="resources" destination=""/>
		</sequential>
	</macrodef>
    
</project>
